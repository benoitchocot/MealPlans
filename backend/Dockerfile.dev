FROM node:20-alpine

# Install OpenSSL and required libraries for Prisma
RUN apk add --no-cache openssl openssl-dev libc6-compat

WORKDIR /app

# Install dependencies first (this layer will be cached)
COPY package*.json ./
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npm run prisma:generate

# Expose port
EXPOSE 3000

# The source code will be mounted as a volume in docker-compose
# Start in development mode
CMD ["npm", "run", "start:dev"]

